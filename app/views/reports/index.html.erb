<head>
  <link rel="stylesheet" type="text/css" href="mystyle.css">
</head>
<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Report</span></th>
      <th>Who reported</th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td>
          <% if report.post.nil? %>
            <%= link_to report.comment.post.title, report.post, class: "btn-link h3" %></br>
          <% else %>
            <%= link_to report.post.title, report.post, class: "btn-link h3" %></br>
          <% end %>
        </td>
        <td><%= gravatar_for report.user, size: 50 %>  <%= report.user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @reports, theme:"twitter-bootstrap-3" %>