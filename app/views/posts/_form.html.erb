<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-8">
      <div class="field form-group">
        <%= f.text_field :title, class: "form-control", placeholder: "Insert the title" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8">
      <div class="field form-group">
        <%= f.text_area :content, class: "form-control", placeholder: "Write your post", cols: "30", rows: "25" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="actions">
        <%= f.submit "Post", class: "btn btn-default btn-default" %>
      </div>
  </div>
<% end %>