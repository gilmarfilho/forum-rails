<div class="col-md-4"></div>
  <div class="col-md-4">
  <h2>Sign up</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
  
      <div class="field">
        <%= f.label :name %>
        <em>*  (Displayed name)</em>
        <input type="nome" class="form-control" id="nome", placeholder = "Name">
    </div>
    
    <div class="field">
      <%= f.label :email %>
      <em>*</em>
      <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
    </div>
  
    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>*  (<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
    </div>
  
    <div class="field">
      <%= f.label :password_confirmation %>
      <em>*</em>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password" %>
    </div>

 <div class="form-group">
    <label for="sex">Sexo:</label>
    <select id="sex" class="form-control">
    <option value="one">Masculino</option>
    <option value="two">Ferminio</option>
    </select>
  </div>
  
    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>
  
</div>
